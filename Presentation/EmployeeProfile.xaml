<Window x:Class="Presentation.EmployeeProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="Thông tin cá nhân" Height="400" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Thông tin cá nhân" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Margin="10">
            <TextBlock Text="Họ và tên:" FontWeight="Bold"/>
            <TextBlock x:Name="txtFullName" FontSize="16"/>

            <TextBlock Text="Ngày sinh:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock x:Name="txtBirthDate" FontSize="16"/>

            <TextBlock Text="Giới tính:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock x:Name="txtGender" FontSize="16"/>

            <TextBlock Text="Số điện thoại:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock x:Name="txtPhoneNumber" FontSize="16"/>

            <TextBlock Text="Vị trí:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock x:Name="txtPosition" FontSize="16"/>

            <TextBlock Text="Lương:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock x:Name="txtSalary" FontSize="16"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="Presentation.DepartmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="DepartmentWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="Admin Dashboard - Employee Management System" Grid.Row="0" FontSize="24"
               FontWeight="Bold" HorizontalAlignment="Center" Foreground="Black" Margin="0,10,0,314" Grid.RowSpan="2"/>
        <TabControl Grid.Row="1" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="55"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Department Management" FontSize="24" FontWeight="Bold" HorizontalAlignment="Left" Margin="114,10,0,20" Grid.Column="1" Width="323"/>

                <Label Content="Department ID:" Grid.Row="1" Margin="10,10,10,10"/>
                <TextBox x:Name="txtDepartmentID" Grid.Row="1" Grid.Column="1" Margin="10,10,10,10" IsEnabled="False"/>

                <Label Content="Department Name:" Grid.Row="2" Margin="10,10,10,10"/>
                <TextBox x:Name="txtDepartmentName" Grid.Row="2" Grid.Column="1" Margin="10,10,10,10"/>

                <DataGrid x:Name="dgDepartment" Grid.Row="7" Grid.ColumnSpan="2" Margin="10,10,10,10"  AutoGenerateColumns="False"
SelectionChanged="dgDepartment_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Department ID" Binding="{Binding DepartmentId}" Width="150" />
                        <DataGridTextColumn Header="Department Name" Binding="{Binding DepartmentName}" Width="300"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Grid.Column="1" Content="Load" HorizontalAlignment="Left" Margin="49,0,0,0" Grid.Row="8" VerticalAlignment="Center" Width="82" Height="35" Background="Beige" Click="btnLoad_Click"/>
                <Button Grid.Column="1" Content="Create" HorizontalAlignment="Left" Margin="146,0,0,0" Grid.Row="8" VerticalAlignment="Center" Height="35" Width="82" Background="#0099FF" Foreground="White" Click="btnCreate_Click"/>
                <Button Grid.Column="1" Content="Update" HorizontalAlignment="Left" Margin="243,0,0,0" Grid.Row="8" VerticalAlignment="Center" Height="35" Width="82" Background="#FFCC00" Click="btnUpdate_Click"/>
                <Button Grid.Column="1" Content="Delete" HorizontalAlignment="Left" Margin="340,0,0,0" Grid.Row="8" VerticalAlignment="Center" Height="35" Width="82" Background="#FF3333" Foreground="White" Click="btnDelete_Click"/>
            </Grid>
        </TabControl>
        <Button x:Name="btnLogout" Content="Logout" Grid.Row="2" Width="100" Height="30"
        HorizontalAlignment="Center" Click="btnLogout_Click"/>
    </Grid>
</Window>
